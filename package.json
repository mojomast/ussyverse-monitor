{
  "name": "ussyverse-monitor",
  "version": "1.0.0",
  "description": "Real-time monitoring dashboard for Ussyverse Hub sessions",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --dev --no-sandbox",
    "build": "npm run build:win",
    "build:win": "electron-builder --win --x64 --config package.json",
    "build:portable": "electron-builder --win portable --config package.json",
    "release": "npm run build:win"
  },
  "keywords": [
    "ussyverse",
    "monitoring",
    "dashboard",
    "electron"
  ],
  "author": "Clawussy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "marked": "^11.1.0"
  },
  "build": {
    "appId": "com.clawussy.usverse-monitor",
    "productName": "Ussyverse Monitor",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
