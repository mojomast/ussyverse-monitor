{
  "name": "ussyverse-monitor",
  "version": "0.1.0",
  "description": "Real-time monitoring dashboard for Ussyverse Hub sessions",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --dev --no-sandbox",
    "build": "electron-builder --win --x64 --publish never",
    "build:portable": "electron-builder --win portable --x64 --publish never",
    "build:nsis": "electron-builder --win nsis --x64 --publish never",
    "release": "npm run build:nsis && npm run build:portable"
  },
  "keywords": [
    "ussyverse",
    "monitoring",
    "dashboard",
    "electron"
  ],
  "author": "Clawussy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "marked": "^11.1.0"
  },
  "build": {
    "appId": "com.clawussy.usverse-monitor",
    "productName": "UsSyverse Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,projectx,swp}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.yml}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
